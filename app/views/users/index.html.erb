<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Users</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12">
      <table class="table mb-0">
        <thead>
          <tr>
<%#            <th scope="col">Title</th> %>
            <th scope="col">Created</th>
            <th scope="col">Updated</th>
<%#            <th scope="col">Body</th> %>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
<%#              <td><%= link_to user.title, user %></td> %>
              <td><%= user.created_at %></td>
              <td><%= user.updated_at %></td>
<%#              <td><%= truncate(user.body, :length => 80) %></td> %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-12 mt-3">
      <%= button_to "New User", { :action => "new" }, :method => :get, :class => "btn btn-success" %>
    </div>
  </div>
</div>
